<Chart Configuration="@config" Series="@series"></Chart>

@code {
	ChartConfiguration config = new ChartConfiguration()
		.SetChart(
			new ChartOptions()
			.SetHeight("350px")
			.SetZoom(
				new ZoomOptions()
				.SetEnabled(false)
			)
		)
		.SetDataLabels(
			new DataLabelsOptions()
			.SetEnabled(false)
		)
		.SetStroke(
			new StrokeOptions()
			.SetCurve(StrokeCurve.Smooth)
		)
		.SetTitle(
			new TitleOptions()
			.SetText("Product Trends by Month")
			.SetAlign(HorizontalAlignment.Left)
		)
		.SetGrid(
			new GridOptions()
			.SetRow(
				new GridRowOptions()
				.SetColors(new string[] { "#f3f3f3", "transparent" })
				.SetOpacity(0.5)
			)
		);

	List<BaseSeries> series = new List<BaseSeries>
	{
		new Series
		{
			Name = "Desktops",
			Type = ChartType.Line,
			Data = new List<DataItem>
			{
				new CategoryDataItem("Jan", 10),
				new CategoryDataItem("Feb", 41),
				new CategoryDataItem("Mar", 35),
				new CategoryDataItem("Apr", 51),
				new CategoryDataItem("May", 49),
				new CategoryDataItem("Jun", 62),
				new CategoryDataItem("Jul", 69),
				new CategoryDataItem("Aug", 91),
				new CategoryDataItem("Sep", 148),
			}
		}
	};
}
